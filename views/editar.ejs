<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style-editar.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <title>Editar</title>
</head>
<body>

    <header class="header">
        <div class="container logo-nav-container">
            <img class="logo" src="/images/Logo-Final.jpg">
            <nav class="navigation">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="#">Cars</a></li>
                    <li><a href="/compare">Compare</a></li>
                    <li><a href="#">Contact</a></li>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/signup">SignUp</a></li>
                    <li><a href="/product">Product</a></li>
                    <li><a href="/cart"><i class="fas fa-shopping-cart"></i></a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main>
        <section class="contenedor-general">

            <label>Seleccione el vehiculo que desea modificar</label> 
            <select class="id">
                <% reproductos.forEach(function(sitcoms){    %>
                <option><%=sitcoms.id %></option>
                <%  }); %>
            </select>
                                          
        </section>
        <section>
            <form method="POST" action="/editar"></form>
                <% reproductos.forEach(function(sitcoms){    %>
                <% if (sitcoms.id == 3){ %>    
                <input type="text" class="marca" value=<%= sitcoms.marca %>>
                <input type="text" class="modelo" value=<%= sitcoms.modelo %>>
                <input type="text" class="color" value=<%= sitcoms.color %>>
                <input type="text" class="precio" value=<%= sitcoms.precio %>>
                <textarea placeholder="<%= sitcoms.descripcion%>"></textarea>

                <% } }); %>
            

        </section>

    </main>

    <footer class="footer">
        <div class="container">
            <p>Soy el footer</p>
        </div>
    </footer>
    
</body>
</html>